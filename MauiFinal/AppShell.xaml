<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiFinal.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiFinal"
    Shell.FlyoutBehavior="Disabled">
    
    <TabBar>
        <Tab Title="Employees" >
            <ShellContent
            Title="Employees"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
            
        </Tab>
        <Tab Title="Menu" >
            <ShellContent
            Title="Menu"
            ContentTemplate="{DataTemplate local:MenuPage}"
            Route="MenuPage" />
        </Tab>
        <Tab Title="Events" >
            <ShellContent
            Title="Event"
            ContentTemplate="{DataTemplate local:EventPage}"
            Route="eventPage" />
        </Tab>



    </TabBar>

</Shell>
